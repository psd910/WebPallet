@model IList<CoreWebTinhTien.Domain.DichVu>
@{
    ViewBag.Title = "Danh sách dịch vụ";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Sử dụng layout của AdminLTE
}
<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <h1>Danh sách dịch vụ</h1>
        </div>
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="card">
                <div class="card-header">
                    <a href="@Url.Action("TaoMoi")" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Thêm mới
                    </a>
                </div>
                <div class="card-body">
                    <table id="dichvu-table" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th style="width: 20%">Mã dịch vụ</th>
                                <th style="width: 60%">Tên dịch vụ</th>
                                <th style="width: 20%">Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Ma</td>
                                        <td>@item.Ten</td>
                                        <td>
                                            <a href="@Url.Action("ChinhSua", new { id = item.Id })" class="btn btn-sm btn-warning">
                                                <i class="fas fa-edit"></i> Sửa
                                            </a>
                                            <a href="@Url.Action("Xoa", new { id = item.Id })" class="btn btn-sm btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa?');">
                                                <i class="fas fa-trash-alt"></i> Xóa
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="3" class="text-center">Không có dữ liệu</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</div>
    @section Scripts {
        <script>
            $(function () {
                $('#dichvu-table').DataTable({
                    "language": {
                        "url": "//cdn.datatables.net/plug-ins/1.10.21/i18n/Vietnamese.json"
                    }
                });
            });
        </script>
    }
