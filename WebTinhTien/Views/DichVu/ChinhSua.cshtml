@model CoreWebTinhTien.Domain.DichVu
@{
    ViewBag.Title = "Chỉnh sửa dịch vụ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <h1>Chỉnh sửa dịch vụ</h1>
        </div>
    </section>

    <section class="content">
        <div class="container-fluid">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.Id)

                <div class="card card-warning">
                    <div class="card-header">
                        <h3 class="card-title">Thông tin dịch vụ</h3>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            @Html.LabelFor(m => m.Ma)
                            @Html.TextBoxFor(m => m.Ma, new { @class = "form-control", placeholder = "Nhập mã dịch vụ" })
                            @Html.ValidationMessageFor(m => m.Ma, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Ten)
                            @Html.TextBoxFor(m => m.Ten, new { @class = "form-control", placeholder = "Nhập tên dịch vụ" })
                            @Html.ValidationMessageFor(m => m.Ten, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Cập nhật</button>
                        <a href="@Url.Action("Index")" class="btn btn-secondary">Hủy</a>
                    </div>
                </div>
            }
        </div>
    </section>
</div>