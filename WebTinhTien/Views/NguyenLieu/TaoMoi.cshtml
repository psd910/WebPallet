@model CoreWebTinhTien.Domain.NguyenLieu
@{
    ViewBag.Title = ViewBag.Title ?? "Tạo Nguyên Liệu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <h1>@ViewBag.Title</h1>
        </div>
    </section>
    <section class="content">
        <div class="container-fluid">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.Id)
                <div class="card card-primary">
                    <div class="card-body">
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                @Html.LabelFor(m => m.Ma)
                                @Html.TextBoxFor(m => m.Ma, new { @class = "form-control" })
                            </div>
                            <div class="form-group col-md-6">
                                @Html.LabelFor(m => m.Ten)
                                @Html.TextBoxFor(m => m.Ten, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-4">
                                @Html.LabelFor(m => m.Dai)
                                @Html.TextBoxFor(m => m.Dai, new { @class = "form-control", @type = "number", @step = "0.001" })
                            </div>
                            <div class="form-group col-md-4">
                                @Html.LabelFor(m => m.Rong)
                                @Html.TextBoxFor(m => m.Rong, new { @class = "form-control", @type = "number", @step = "0.001" })
                            </div>
                            <div class="form-group col-md-4">
                                @Html.LabelFor(m => m.Cao)
                                @Html.TextBoxFor(m => m.Cao, new { @class = "form-control", @type = "number", @step = "0.001" })
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-4">
                                @Html.LabelFor(m => m.DonViTinh)
                                @Html.TextBoxFor(m => m.DonViTinh, new { @class = "form-control" })
                            </div>
                            <div class="form-group col-md-4">
                                @Html.LabelFor(m => m.DinhLuong)
                                @Html.TextBoxFor(m => m.DinhLuong, new { @class = "form-control", @type = "number", @step = "0.001" })
                            </div>
                            <div class="form-group col-md-4">
                                @Html.LabelFor(m => m.SoM3)
                                @Html.TextBoxFor(m => m.SoM3, new { @class = "form-control", @type = "number", @step = "0.001" })
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-4">
                                @Html.LabelFor(m => m.SoLuong)
                                @Html.TextBoxFor(m => m.SoLuong, new { @class = "form-control", @type = "number" })
                            </div>
                            <div class="form-group col-md-4">
                                @Html.LabelFor(m => m.DonGia)
                                @Html.TextBoxFor(m => m.DonGia, new { @class = "form-control", @type = "number", @step = "0.001" })
                            </div>
                            <div class="form-group col-md-4">
                                @Html.LabelFor(m => m.ThanhTien)
                                @Html.TextBoxFor(m => m.ThanhTien, new { @class = "form-control", @type = "number", @step = "0.001" })
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Lưu</button>
                        <a href="@Url.Action("DanhSach")" class="btn btn-secondary">Hủy</a>
                    </div>
                </div>
            }
        </div>
    </section>
</div>